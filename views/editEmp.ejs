<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>

    <!-- bootstrap -->
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"> -->

    <!-- css -->
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/newEmp.css">
    <link
      rel="stylesheet"
      href="https://unpkg.com/boxicons@latest/css/boxicons.min.css"
    />

    <!-- logo -->
    <%- include("./includes/logo.ejs") %>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <section class="main-con">
      <div class="nav-bar">
        <div class="con">
          <div class="heading">
            <h2>The Grand Ã‰clat</h2>
          </div>
          <div class="nav-con">
            <ul class="nav-list">
              <a href="/dashboard"
                ><li class="dashboard">
                  <i class="bx bxs-dashboard"></i>Dashboard
                </li></a
              >
              <a href="/dashboard/orders"
                ><li class="order">
                  <i class="bx bx-restaurant"></i>Orders
                </li></a
              >
              <a href="/dashboard/customers"
                ><li class="customer">
                  <i class="bx bxs-user"></i>Customers
                </li></a
              >
              <a href="/dashboard/employee"
                ><li class="emoloyee active">
                  <i class="bx bxs-user"></i>Employees
                </li></a
              >
              <a href="/dashboard/menu"
                ><li class="menu"><i class="bx bxs-food-menu"></i>Menu</li></a
              >
              <a href="/dashboard/table"
                ><li class="table"><i class="bx bxs-card"></i>Table</li></a
              >
            </ul>
          </div>
        </div>
      </div>

      <div class="dashboard">
        <div class="nav-bar2">
          <a href=""><i class="bx bx-menu"></i></a>
          <div class="nav-icons">
            <p>Hello, Jilmil</p>
            <i class="bx bxs-user-circle"></i>
          </div>
        </div>
        <div class="cust-dash">
          <div class="dash-titile">
            <h2>Employees List</h2>
            <p>Dashboard / Employee / #<%= data.employeeId %></p>
          </div>
          <div class="empForm-div">
            <form action="/dashboard/employee/<%= data._id %>?_method=PUT" method="POST">
                <div class="empForm">
                    <div>
                        <label for="name">Employee Name</label>
                        <input type="text" id="name" name="name" value= "<%= data.name %>" required>
                    </div>
                    <div>
                        <label for="contactNo">Contact Number</label>
                        <div class="input-group">
                            <span class="input-group-text">+91</span>
                            <input type="number" id="contactNo" name="contactNo" value="<%= data.contactNo.toString().slice(2) %>" required>
                        </div>
                    </div>
                    <div>
                        <label for="post">Post</label>
                        <select id="post" required name="post" value="<%= data.post %>">
                            <option>Select Post</option>
                            <option value="Manager">Manager</option>
                            <option value="Chef">Chef</option>
                            <option value="Waiter">Waiter</option>
                            <option value="Cashier">Cashier</option>
                            <option value="Dishwasher">Dishwasher</option>
                            <option value="Bartender">Bartender</option>
                            <option value="Guard">Guard</option>
                          </select>
                    </div>
                    <div>
                      <label for="gender">Gender</label>
                      <select id="gender" required name="gender">
                          <option>Select Gender</option>
                          <option value="Male">Male</option>
                          <option value="Female">Female</option>
                        </select>
                     </div>
                    <div>
                      <label for="age">Age</label>
                      <input type="number" id="age" name="age"  value="<%= data.age %>" required>
                     </div>
                    <div>
                        <label for="salary">Salary</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class='bx bx-rupee' ></i></span>
                            <input type="number" class="form-control" id="salary" name="salary"  value="<%= data.salary %>" required>
                        </div>
                    </div>
                    <div>
                        <label for="city">City</label>
                        <input type="text" id="city" name="city"  value="<%= data.location.city %>" required>
                    </div>
                    <div>
                        <label for="state">State</label>
                        <input type="text" id="state" name="state" value="Assam" disabled>
                    </div>
                    <div class="reg-btn">
                      <a href="/dashboard/employee"><i class='bx bx-arrow-back' ></i>Back</a>
                        <button type="submit">Update</button>
                    </div>
                </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <script
      type="text/javascript"
      src="https://www.gstatic.com/charts/loader.js"
    ></script>
    <script src="/js/graph.js"></script>
  </body>
</html>
