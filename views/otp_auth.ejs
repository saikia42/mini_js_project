<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>

    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">


    <!-- logo -->
    <%- include("./includes/logo.ejs") %>
    
    <!-- css -->
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <%- include("./includes/flash.ejs")  %>
    <div class="con">
        <div class="container">
            <div class="back">
                <a href="/home"><i class='bx bx-arrow-back'></i></a>
            </div>
            <div class="box">
                <div class="text">
                    <div class="textDiv">
                        <h2>SIGN UP  
                            <% if(data){ %>
                            <%= data.toUpperCase() %>
                            <% } %>
                        </h2>
                        <p>Enter your OTP to sign up</p>
                    </div>
                </div>
                <div class="imgDiv">
                    <img src="/css/img/cold.png" alt="">
                </div>
                <form  
                <% if(data != " "){ %>
                    action="/admin/auth-otp"
                    <% } else{%>
                    action="/auth-otp"
                <% } %> 
                method="post">
                    <div>
                        <label for="otp">One Time Password(OTP)</label>
                        <div class="inpGrp">
                            <input type="text" name="otp" class="form" id="otp"  aria-label="otp" aria-describedby="basic-addon1" required autocomplete="off">
                        </div>
                    </div>
                    <div>
                        <label for="password">Password</label>
                        <div class="inpGrp">
                            <input type="password" name="password" class="form" id="password"  aria-label="password" aria-describedby="basic-addon1" required autocomplete="off">
                        </div>
                    </div>
                    
                    <button type="submit" class="btn">Verify</button>
                </form>
                <div class="termsText">
                    <p>By clicking, I accept the <b>Terms &amp; Conditions &amp; Privacy Policy.</b></p>
                </div>
            </div>
        </div>
    </div>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>