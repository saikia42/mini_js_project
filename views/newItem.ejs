  <body>
    <section class="main-con">
      <div class="nav-bar">
        <div class="con">
          <div class="heading">
            <h2>The Grand Ã‰clat</h2>
          </div>
          <div class="nav-con">
            <ul class="nav-list">
              <a href="/dashboard"
                ><li class="dashboard">
                  <i class="bx bxs-dashboard"></i>Dashboard
                </li></a
              >
              <a href="/dashboard/orders"
                ><li class="order">
                  <i class="bx bx-restaurant"></i>Orders
                </li></a
              >
              <a href="/dashboard/customers"
                ><li class="customer">
                  <i class="bx bxs-user"></i>Customers
                </li></a
              >
              <a href="/dashboard/employee"
                ><li class="emoloyee">
                  <i class="bx bxs-user"></i>Employees
                </li></a
              >
              <a href="/dashboard/menu"
                ><li class="menu active"><i class="bx bxs-food-menu"></i>Menu</li></a
              >
              <a href="/dashboard/table"
                ><li class="table"><i class="bx bxs-card"></i>Table</li></a
              >
            </ul>
          </div>
        </div>
      </div>

      <div class="dashboard">
        <div class="nav-bar2">
          <a href=""><i class="bx bx-menu"></i></a>
          <div class="nav-icons">
            <p>Hello, Ranadip</p>
            <i class="bx bxs-user-circle"></i>
          </div>
        </div>
        <div class="cust-dash">
          <div class="dash-titile">
            <h2>Items List</h2>
            <p>Dashboard / Menu / New</p>
          </div>
          <div class="itemForm-div">
            <form action="/dashboard/menu" method="post" enctype="multipart/form-data">
                <div class="itemForm">
        
                    <div>
                      <label for="itemName">Item Name</label>
                      <input type="text" id="itemName" name="newItem[itemName]" required>
                     </div>
                    <div>
                        <label for="category">Category</label>
                        <select id="category" required name="newItem[category]">
                            <option selected>Select Category</option>
                            <option value="Appetizers">Appetizers</option>
                            <option value="Main-Course">Main-Course</option>
                            <option value="Beverages">Beverages</option>
                            <option value="Ice-Cream">Ice-Cream</option>
                            <option value="Drinks">Drinks</option>
                            <option value="Add-On">Add-On</option>
                          </select>
                    </div>
                    <div>
                      <label for="type">Type</label>
                      <select id="type" required name="newItem[type]">
                          <option selected> Select Veg or Non-Veg</option>
                          <option value="Veg">Veg</option>
                          <option value="Non-Veg">Non-Veg</option>
                        </select>
                     </div>
                     <div>
                      <label for="price">Price</label>
                      <div class="input-group">
                        <span class="input-group-text"><i class='bx bx-rupee' ></i></span>
                          <input type="number" id="price" name="newItem[price]" required>
                      </div>
                  </div>
                    <div>
                        <label for="discount">Discount</label>
                        <div class="input-group">
                            <span class="input-group-text" >%</span>
                            <input type="number" class="form-control" id="discount" name="newItem[discount]" required>
                        </div>
                    </div>
                    <div>
                      <label for="availabilityr">Availablity</label>
                      <select id="availability" required name="newItem[availability]">
                          <option selected> Select</option>
                          <option value="available">available</option>
                          <option value="Not available">Not available</option>
                        </select>
                    </div>
                    <div>
                      <label for="itemImage">Item Image</label>
                      <div class="input-group">
                        <input type="file" id="itemImage" name="newItem[itemImage]">
                    </div>
                     </div>
                    <div>
                      <label for="itemDetails">Item Details</label>
                      <textarea id="itemDetails" name="newItem[itemDetails]" rows="4"></textarea>
                    </div>
                    <br>
                    <div class="reg-btn">
                        <button type="submit" >Add Item</button>
                        <a href="/dashboard/menu"><i class='bx bx-arrow-back' ></i>Back</a>
                    </div>


                </div>
            </form>
          </div>
        </div>
      </div>
    </section>
    <script
      type="text/javascript"
      src="https://www.gstatic.com/charts/loader.js"
    ></script>
    <script src="/js/graph.js"></script>
  </body>
</html>
