<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">


    <!-- logo -->
    <%- include("./includes/logo.ejs") %>
    
    <!-- css -->
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <%- include("./includes/flash.ejs")  %>
    <div class="con">
        <div class="container">
            <div class="back">
                <a href="/home"><i class='bx bx-arrow-back'></i></a>
            </div>
            <div class="box">
                <div class="text">
                    <div class="textDiv">
                        <h2>LOGIN 
                            <% if(data){ %>
                                <%= data.toUpperCase() %>
                                <% } %>
                        </h2>
                        <p>Enter your phone number to continue</p>
                    </div>
                </div>
                <div class="imgDiv">
                    <img src="/css/img/cold.png" alt="">
                </div>
                <form 
                <% if(data != " "){ %>
                    action="/admin/login"
                    <% } else{%>
                action="/login"
                <% } %>
                 method="post">
                    <label for="inputNumber">PHONE NUMBER</label>
                    <div class="inpGrp">
                        <span>+91</span>
                        <span class="mx-1">-</span>
                        <input type="text" name="username" class="form" id="inputNumber"  aria-label="Username" aria-describedby="basic-addon1" required autocomplete="off">
                    </div>
                    <label id="passLabel" for="password">PASSWORD</label>
                    <div class="inpGrp">
                        <input type="password" name="password" id="password">
                    </div>
                    <button type="submit" class="btn">Login</button>
                </form>
                <div class="termsText">
                    <p>By clicking, I accept the <b>Terms &amp; Conditions &amp; Privacy Policy.</b></p>
                </div>
            </div>
    
            <div class="signup">
                <p>Don't have account? <a <% if(data != " "){ %>
                    href="/admin/signup"
                    <% } else{%>
                href="/signup"
                <% } %>> Register here</a></p>
            </div>
        </div>

    </div>
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>