<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <!-- bootstrap -->
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"> -->

    <!-- css -->
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/dashTable.css">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <!-- logo -->
    <%- include("./includes/logo.ejs") %>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <section class="main-con">
        <div class="nav-bar">
            <div class="con">
                <div class="heading">
                    <h2>The Grand Ã‰clat</h2>
                </div>
                <div class="nav-con">
                    <ul class="nav-list">
                        <a href="/dashboard"><li class="dashboard"><i class='bx bxs-dashboard'></i>Dashboard</li></a>
                        <a href="/dashboard/orders"><li class="order "><i class='bx bx-restaurant'></i>Orders</li></a>
                        <a href="/dashboard/customers"><li class="customer"><i class='bx bxs-user' ></i>Customers</li></a>
                        <a href="/dashboard/employee"><li class="emoloyee"><i class='bx bxs-user' ></i>Employees</li></a>
                        <a href="/dashboard/menu"><li class="menu"><i class='bx bxs-food-menu' ></i>Menu</li></a>
                        <a href="/dashboard/table"><li class="table active"><i class='bx bxs-card' ></i>Table</li></a>
                    </ul>
                </div>
            </div>
        </div>
    
        <div class="dashboard">
            <div class="nav-bar2">
                <a href=""><i class='bx bx-menu' ></i></a>
                <div class="nav-icons">
                    <p>Hello, Jilmil</p>
                    <i class='bx bxs-user-circle'></i>
                </div>
            </div>
            <div class="cust-dash">
                <div class="dash-head">
                  <div class="dash-titile">
                      <h2>Tables List</h2>
                      <p>Dashboard / Table / <%= data.tableNo %></p>
                  </div>
                  <div class="emp-add">
                      <form action="/dashboard/table/new">
                          <button><i class='bx bx-plus'></i>Add Table</button>
                      </form>
                  </div>
                </div>
                <div class="o-one">
                    <h2>Table <%= data.tableNo %></h2>
                    <table>
                        <tr>
                            <th>Customer id</th>
                            <th>Customer Name</th>
                            <th>Contact Number</th>
                            <th>People</th>
                            <th>Time Slot</th>
                            <th>Date</th>
                        </tr>
                        <% for(item of data.booking) {%>
                            <tr>
                                <td>#<%= item.customerId %></td>
                                <td>Ranadip Das</td>
                                <td>+91-9957416364</td>
                                <td><%= item.people %></td>
                                <td><%= item.time.start + "-" + item.time.end %></td>
                                <td><%= item.date %></td>
                                <td><i class="fa-solid fa-trash"></i></td>
                            </tr>
                        <% }%>
                    </table>
                </div>
            </div>

        </div>
    </section>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script src="/js/graph.js"></script>      
</body>
</html>