<% if (success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show col-lg-6 mt-2 mb-2 offset-lg-2 col-12" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show col-lg-3 mx-2 mt-2 mb-2 offset-lg-2" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>